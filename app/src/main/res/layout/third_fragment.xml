<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="15dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stas.acctime.MainActivity$PlaceholderFragment"
    tools:targetApi="lollipop">

    <TextClock
        android:id="@+id/textClock2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="monospace"
        android:format12Hour="dd.MM.yyyy"
        android:format24Hour="dd.MM.yyyy"
        android:gravity="center_horizontal"
        android:textColor="@android:color/background_light"
        android:textSize="44sp" />

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/statusView"
        android:layout_marginTop="18dp"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textClock2"
        android:fontFamily="monospace"
        android:format12Hour="HH:mm"
        android:format24Hour="HH:mm"
        android:gravity="center_horizontal"
        android:textColor="@android:color/background_light"
        android:textSize="44sp" />

    <TextView
        android:id="@+id/statusView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Вы не на работе"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/statusView"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/startButton" />

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:width="90dp"
        android:height="90dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/signerror" />

</RelativeLayout>
